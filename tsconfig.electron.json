{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node", // Use "node" for CommonJS module resolution
    "outDir": "dist/electron",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": ".",
    "baseUrl": ".", // This makes paths relative to the project root
    "paths": {
      "@electron/*": ["electron/*"] // Map @electron/ to electron/
    }
  },
  "ts-node": { // New: ts-node specific options
    "esm": true
  },
  "include": [
    "electron/main.ts",
    "electron/job-manager.ts",
    "electron/tasks/scraper.ts",
    "electron/tasks/video-generator.ts",
    "electron/preload.ts",
    "electron/tests/**/*.ts"
  ]
}